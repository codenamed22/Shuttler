{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* core */
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,

    /* <-- ALIAS â€“ keep in sync with vite.config.ts */
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },

    /* extras */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
